<!doctype html>
<html>
  <body>
    <h2>Ingredients</h2>

    <form method="post" action="/ingredients">
      <input name="name" placeholder="New ingredient..." required>
      <button>Add</button>
    </form>

    <table border="1" cellpadding="6" style="margin-top:10px">
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>
      <% ingredients.forEach(i => { %>
        <tr>
          <td><%= i.name %></td>
          <td>
            <a href="/ingredients/<%= i.id %>/edit">âœï¸ Edit</a>
            <form method="post" action="/ingredients/<%= i.id %>/delete" style="display:inline">
              <button onclick="return confirm('Delete <%= i.name %>?')">ğŸ—‘ Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
      <% if (!ingredients.length) { %>
        <tr><td colspan="2">No ingredients yet.</td></tr>
      <% } %>
    </table>

    <p style="margin-top:10px"><a href="/">Home</a></p>
  </body>
</html>