<!doctype html>
<html>
  <body>
    <h2>Recipes</h2>
    <p><a href="/recipes/new">â• Add New Recipe</a></p>

    <table border="1" cellpadding="8" cellspacing="0">
      <tr>
        <th>Title</th>
        <th>Cuisine</th>
        <th>Created At</th>
        <th>Actions</th>
      </tr>
      <% recipes.forEach(r => { %>
        <tr>
          <td><%= r.title %></td>
          <td><%= r.cuisine || 'No Cuisine' %></td>
          <td><%= new Date(r.created_at).toLocaleString() %></td>
          <td>
            <a href="/recipes/<%= r.id %>/edit">âœï¸ Edit</a>
            <form method="post" action="/recipes/<%= r.id %>/delete" style="display:inline">
              <button onclick="return confirm('Are you sure you want to delete this recipe?')">ğŸ—‘ Delete</button>
            </form>
          </td>
        </tr>
      <% }); %>
      <% if (!recipes.length) { %>
        <tr><td colspan="4">No recipes found.</td></tr>
      <% } %>
    </table>

    <p style="margin-top:10px"><a href="/">Home</a></p>
  </body>
</html>